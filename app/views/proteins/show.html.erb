<div class="row">
  <div class="col-md-12">
    <h1>Protein Data</h1>
  </div>
</div>
<!-- I believe this is CSS from twitter's Bootstrap -->

<div class="row">
  <div class="col-md-12">

    <!-- I believe this links to the new.html.erb view -->
    <hr />

    <table class="table table-bordered">
      <thread>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Accession Number</th>
          <th>Weight</th>
          <th>Created</th>
          <th>Updated</th>
        </tr>
      </thread>
      <tbody>
        <tr>
          <td><%= @protein.id %></td>
          <td><%= @protein.name %></td>
          <td><%= @protein.accession_number %></td>
          <td><%= @protein.weight %></td>
          <td><%= @protein.created_at %></td>
          <td><%= @protein.updated_at %></td>
        </tr>
      <!-- this ends the ruby portion of the code -->
      </tbody>
    </table>
    <p align="right">
    <%= link_to 'Edit', edit_protein_path(@protein.id) %>
    <%= link_to 'Destroy', @protein, method: :delete, data: { confirm: "This will remove the protein data. Are you sure?" } %>
    </p>
  </div>
</div>

<div class="the-table">
  <div class="col-md-12">
    <thread>
      <br>
      <tr>
        <h3>Sequence:</h3>
      </tr>
    </thread>
    <tbody>
      <tr>
        <td><%= @protein.sequence %></td>
      </tr>
    </tbody>
  </table>
  </div>
</div>
